<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background"
    >


    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="326dp"
        android:layout_height="470dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- First CardView in Row 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                app:cardCornerRadius="15dp"
                android:layout_margin="8dp">

                <!-- ImageView inside the CardView -->
                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="129dp"
                    android:layout_height="95dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_bed_24" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="131dp"
                    android:layout_height="39dp"
                    android:layout_marginTop="84dp"
                    android:layout_marginEnd="96dp" />

            </androidx.cardview.widget.CardView>

            <!-- Second CardView in Row 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                app:cardCornerRadius="15dp"
                android:layout_margin="8dp">

                <!-- ImageView inside the CardView -->
                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="122dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_bed_24" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="131dp"
                    android:layout_height="39dp"
                    android:layout_marginTop="84dp"
                    android:layout_marginEnd="96dp" />

            </androidx.cardview.widget.CardView>

        </TableRow>

        <!-- Second Row -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- First CardView in Row 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                app:cardCornerRadius="15dp"
                android:layout_margin="8dp">

                <!-- ImageView inside the CardView -->
                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_bed_24" />
                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="131dp"
                    android:layout_height="39dp"
                    android:layout_marginTop="84dp"
                    android:layout_marginEnd="96dp" />

            </androidx.cardview.widget.CardView>

            <!-- Second CardView in Row 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                app:cardCornerRadius="15dp"
                android:layout_margin="8dp">

                <!-- ImageView inside the CardView -->
                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_bed_24" />
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="131dp"
                    android:layout_height="39dp"
                    android:layout_marginTop="84dp"
                    android:layout_marginEnd="96dp" />

            </androidx.cardview.widget.CardView>

        </TableRow>

        <!-- Third Row -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="128dp">

            <!-- First CardView in Row 3 -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                app:cardCornerRadius="15dp">

                <!-- ImageView inside the CardView -->
                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_bed_24" />
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="131dp"
                    android:layout_height="39dp"
                    android:layout_marginTop="84dp"
                    android:layout_marginEnd="96dp" />

            </androidx.cardview.widget.CardView>

            <!-- Second CardView in Row 3 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView6"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="match_parent"
                    android:layout_height="126dp"
                    android:src="@drawable/baseline_add_24" />

            </androidx.cardview.widget.CardView>

        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>